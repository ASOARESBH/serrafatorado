    <script>
        // Variáveis globais
        let checklistId = null;
        let checklist = null;

        // Inicialização
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            checklistId = urlParams.get('id');
            
            if (!checklistId) {
                mostrarAlerta('ID do checklist não informado', 'error');
                setTimeout(() => window.location.href = 'checklist_veicular.html', 2000);
                return;
            }
            
            carregarChecklist();
        });

        function carregarChecklist() {
            fetch(`api/api_checklist.php?acao=buscar&id=${checklistId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.sucesso) {
                        checklist = data.dados;
                        exibirInfoChecklist();
                    } else {
                        mostrarAlerta(data.mensagem, 'error');
                        setTimeout(() => window.location.href = 'checklist_veicular.html', 2000);
                    }
                })
                .catch(error => {
                    console.error('Erro:', error);
                    mostrarAlerta('Erro ao carregar checklist', 'error');
                });
        }

        function exibirInfoChecklist() {
            const infoBox = document.getElementById('infoChecklist');
            infoBox.innerHTML = `
                <h3><i class="fas fa-car"></i> ${checklist.placa} - ${checklist.veiculo_modelo}</h3>
                <p>
                    <strong>Operador:</strong> ${checklist.operador_nome} | 
                    <strong>KM Inicial:</strong> ${checklist.km_inicial} km | 
                    <strong>Data/Hora:</strong> ${formatarDataHora(checklist.data_hora_abertura)}
                </p>
            `;
        }

        // Submissão do formulário
        document.getElementById('formItens').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const itens = [
                { tipo_item: 'nivel', nome_item: 'Nível do Óleo', categoria: 'nivel_oleo', valor_abertura: document.querySelector('input[name="nivel_oleo"]:checked').value },
                { tipo_item: 'nivel', nome_item: 'Nível da Água', categoria: 'nivel_agua', valor_abertura: document.querySelector('input[name="nivel_agua"]:checked').value },
                { tipo_item: 'nivel', nome_item: 'Pneu Dianteiro Esquerdo', categoria: 'pneu_dianteiro_esq', valor_abertura: document.querySelector('input[name="pneu_dianteiro_esq"]:checked').value },
                { tipo_item: 'nivel', nome_item: 'Pneu Dianteiro Direito', categoria: 'pneu_dianteiro_dir', valor_abertura: document.querySelector('input[name="pneu_dianteiro_dir"]:checked').value },
                { tipo_item: 'nivel', nome_item: 'Pneu Traseiro Esquerdo', categoria: 'pneu_traseiro_esq', valor_abertura: document.querySelector('input[name="pneu_traseiro_esq"]:checked').value },
                { tipo_item: 'nivel', nome_item: 'Pneu Traseiro Direito', categoria: 'pneu_traseiro_dir', valor_abertura: document.querySelector('input[name="pneu_traseiro_dir"]:checked').value },
                { tipo_item: 'funcional', nome_item: 'Buzina', categoria: 'buzina', valor_abertura: document.querySelector('input[name="buzina"]:checked').value },
                { tipo_item: 'funcional', nome_item: 'Faróis Alto', categoria: 'farois', valor_abertura: document.querySelector('input[name="farois"]:checked').value },
                { tipo_item: 'funcional', nome_item: 'Luzes de Freio', categoria: 'luzes_freio', valor_abertura: document.querySelector('input[name="luzes_freio"]:checked').value },
                { tipo_item: 'funcional', nome_item: 'Cintos de Segurança', categoria: 'cintos', valor_abertura: document.querySelector('input[name="cintos"]:checked').value },
                { tipo_item: 'funcional', nome_item: 'Limpadores de Para-brisa', categoria: 'limpadores', valor_abertura: document.querySelector('input[name="limpadores"]:checked').value },
                { tipo_item: 'funcional', nome_item: 'Extintor de Incêndio', categoria: 'extintor', valor_abertura: document.querySelector('input[name="extintor"]:checked').value }
            ];
            
            const formData = new FormData();
            formData.append('acao', 'salvar_abertura');
            formData.append('checklist_id', checklistId);
            formData.append('itens', JSON.stringify(itens));
            
            // Desabilitar botão
            const btnSubmit = document.querySelector('button[type="submit"]');
            btnSubmit.disabled = true;
            btnSubmit.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Salvando...';
            
            fetch('api/api_checklist_itens.php', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.sucesso) {
                    mostrarAlerta('Checklist salvo com sucesso! Redirecionando...', 'success');
                    setTimeout(() => {
                        window.location.href = 'checklist_veicular.html';
                    }, 1500);
                } else {
                    mostrarAlerta(data.mensagem, 'error');
                    btnSubmit.disabled = false;
                    btnSubmit.innerHTML = '<i class="fas fa-save"></i> Salvar Checklist';
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                mostrarAlerta('Erro ao salvar checklist', 'error');
                btnSubmit.disabled = false;
                btnSubmit.innerHTML = '<i class="fas fa-save"></i> Salvar Checklist';
            });
        });

        function formatarDataHora(dataHora) {
            if (!dataHora) return '-';
            const data = new Date(dataHora);
            return data.toLocaleString('pt-BR');
        }

        function mostrarAlerta(mensagem, tipo) {
            const alertaDiv = document.getElementById('alertaMsg');
            alertaDiv.innerHTML = `<div class="alert alert-${tipo === 'success' ? 'success' : 'error'}">${mensagem}</div>`;
            window.scrollTo(0, 0);
            setTimeout(() => { alertaDiv.innerHTML = ''; }, 5000);
        }

        function toggleMenu() {
            document.getElementById('sidebar').classList.toggle('active');
        }

        document.addEventListener('click', function(e) {
            const sidebar = document.getElementById('sidebar');
            const toggle = document.querySelector('.menu-toggle');
            
            if (window.innerWidth <= 768 && !sidebar.contains(e.target) && !toggle.contains(e.target)) {
                sidebar.classList.remove('active');
            }
        });
    </script>
    <!-- Proteção de Login -->
    <script src="js/auth-guard.js"></script>
    <script src="js/user-display.js"></script>
</body>
</html>
